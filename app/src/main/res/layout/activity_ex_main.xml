                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:textColor="#000"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="7 exercise"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:paddingLeft="20dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/day_bg"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Day 03"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="#000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="6 exercise"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:paddingLeft="20dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/day_bg"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Day 04"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="#000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="7 exercise"
                    android:textColor="#000"
                    android:paddingLeft="20dp"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/day_bg"
                android:layout_margin="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Day 05"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="#000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="5 exercise"
                    android:textColor="#000"
                    android:paddingLeft="20dp"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/day_bg"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Day 06"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="#000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="7 exercise"
                    android:textColor="#000"
                    android:paddingLeft="20dp"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/day_bg"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Day 07"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:textColor="#000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
